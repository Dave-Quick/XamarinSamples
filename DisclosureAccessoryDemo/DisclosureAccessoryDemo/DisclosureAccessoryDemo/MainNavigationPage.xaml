<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DisclosureAccessoryDemo.MainNavigationPage"
             xmlns:xaml="clr-namespace:DisclosureAccessoryDemo.Xaml;assembly=DisclosureAccessoryDemo"
             Title="Home">
  <TableView HorizontalOptions="Fill" VerticalOptions="Fill" Intent="Menu">
    <TableSection Title="Text Examples">
      <TextCell Text="Built-in Label Styles" Tapped="ShowStyles" xaml:CellExtensions.Accessory="DisclosureIndicator" />
      <TextCell Text="Built-in Font Sizes" Tapped="ShowSizes" xaml:CellExtensions.Accessory="DisclosureIndicator" />
      <TextCell Text="Built-in Font Attributes" Tapped="ShowAttributes" xaml:CellExtensions.Accessory="DisclosureIndicator" />
    </TableSection>
  </TableView>
</ContentPage>